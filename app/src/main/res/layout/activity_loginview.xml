<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <EditText
        android:textSize="16sp"
        android:id="@+id/et_username"
        android:layout_marginTop="160dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:background="@drawable/layout_userandpsw"
        android:hint="请输入手机号"
        android:inputType="number"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/username"
        android:layout_height="55dp"/>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:background="#000"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_remove1"
        android:layout_marginTop="176dp"
        android:layout_alignRight="@+id/et_username"
        android:visibility="invisible"
        android:layout_marginRight="4dp"
        android:src="@drawable/removeuserorpsw" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/et_username"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/layout_userandpsw"
        android:drawablePadding="5dp"
        android:hint="请输入登陆密码"
        android:inputType="textPassword"
        android:paddingLeft="40dp"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/iv_remove2"
        android:layout_marginTop="264dp"
        android:visibility="invisible"
        android:layout_alignRight="@+id/et_password"
        android:layout_marginRight="4dp"
        android:src="@drawable/removeuserorpsw" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:text="登陆"
        android:id="@+id/bt_loginbutton"
        android:layout_width="100dp"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="60dp"
        android:text="注册用户"
        android:textColor="#000000"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/findback_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="60dp"
        android:text="忘记密码"
        android:textColor="#000000"
        android:textSize="16sp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/pswmingan"
        android:id="@+id/cb_pswmingan"
        android:layout_alignLeft="@+id/et_password"
        android:checked="false"
        android:layout_alignBottom="@id/et_password"
        android:layout_marginBottom="14dp"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"/>
</RelativeLayout>