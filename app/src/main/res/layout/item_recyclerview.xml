<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_margin="5dp"
            android:layout_height="32dp"
            android:id="@+id/iv_head_photo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bobo"
            android:layout_toRightOf="@+id/iv_head_photo"
            android:id="@+id/tv_name"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"
            android:textColor="#000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刚刚"
            android:layout_toRightOf="@+id/iv_head_photo"
            android:layout_below="@+id/tv_name"
            android:id="@+id/tv_time"
            android:layout_marginLeft="8dp"
            android:textColor="#000"
            android:textSize="12sp"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/more1"
            android:id="@+id/iv_more"
            android:layout_marginRight="6dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#000"
            android:textSize="15sp" />

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/graydark"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/zhuanfa"
            android:layout_width="26dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="54dp"
            android:src="@drawable/zhuanfa"
            android:tint="#000" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tv_zhuanfa"
            android:text="0"
            android:layout_toRightOf="@+id/zhuanfa"
            android:layout_marginLeft="2dp"
            android:textSize="15sp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="0"
            android:gravity="center_vertical"
            android:layout_marginRight="40dp"
            android:id="@+id/tv_wechat"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="match_parent"
            android:src="@drawable/liaotian"
            android:layout_marginRight="6dp"
            android:tint="#000"
            android:layout_toLeftOf="@id/tv_wechat"
            android:id="@+id/wechat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/wechat"
            android:layout_marginRight="14dp"
            android:id="@+id/tv_love"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/dianzan"
            android:tint="#000"
            android:layout_toLeftOf="@+id/tv_love"
            android:layout_marginRight="2dp"
            android:id="@+id/love"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="#C4C4C4"/>
</LinearLayout>